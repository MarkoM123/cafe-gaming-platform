generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  name         String?
  role         UserRole   @default(GAMER)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  passwordHash String
  auditLogs    AuditLog[]
}

model Table {
  id        String         @id @default(uuid())
  code      String         @unique
  name      String?
  isActive  Boolean        @default(true)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  sessions  TableSession[]
}

model TableSession {
  id             String    @id @default(uuid())
  tableId        String
  startedAt      DateTime  @default(now())
  endedAt        DateTime?
  lastActivityAt DateTime  @default(now())
  orders         Order[]
  table          Table     @relation(fields: [tableId], references: [id])
}

model MenuCategory {
  id        String     @id @default(uuid())
  name      String
  sortOrder Int        @default(0)
  items     MenuItem[]
}

model MenuItem {
  id          String       @id @default(uuid())
  categoryId  String
  name        String
  description String?
  priceCents  Int
  isActive    Boolean      @default(true)
  category    MenuCategory @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
}

model GameStation {
  id           String        @id @default(uuid())
  name         String
  isActive     Boolean       @default(true)
  reservations Reservation[]
}

model Game {
  id           String        @id @default(uuid())
  name         String
  isActive     Boolean       @default(true)
  reservations Reservation[]
}

model Reservation {
  id            String      @id @default(uuid())
  stationId     String
  gameId        String?
  customerName  String
  customerPhone String
  startsAt      DateTime
  endsAt        DateTime
  createdAt     DateTime    @default(now())
  deletedAt     DateTime?
  game          Game?       @relation(fields: [gameId], references: [id])
  station       GameStation @relation(fields: [stationId], references: [id])

  @@index([stationId, startsAt, endsAt])
  @@index([deletedAt])
}

model Order {
  id             String       @id @default(uuid())
  tableSessionId String
  status         OrderStatus  @default(NEW)
  totalCents     Int
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  idempotencyKey String?      @unique
  deletedAt      DateTime?
  orderDateKey   String
  orderNumber    Int
  tableSession   TableSession @relation(fields: [tableSessionId], references: [id])
  items          OrderItem[]

  @@unique([orderDateKey, orderNumber])
  @@index([deletedAt, createdAt])
}

model OrderDailyCounter {
  dateKey    String @id
  nextNumber Int
}

model OrderItem {
  id             String   @id @default(uuid())
  orderId        String
  menuItemId     String
  quantity       Int
  unitPriceCents Int
  totalCents     Int
  menuItem       MenuItem @relation(fields: [menuItemId], references: [id])
  order          Order    @relation(fields: [orderId], references: [id])
}

model OperatingHour {
  id        String   @id @default(uuid())
  dayOfWeek Int      @unique
  openTime  String
  closeTime String
  isClosed  Boolean  @default(false)
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String
  entityType String
  entityId   String
  metadata   Json?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])

  @@index([entityType, entityId])
  @@index([createdAt])
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

enum UserRole {
  ADMIN
  STAFF
  GAMER
}

enum OrderStatus {
  NEW
  IN_PROGRESS
  DONE
  CANCELED
}
